<xs:schema version="1.0.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dcc="https://dfm.dk"
           xmlns:ds="http://www.w3.org/2000/09/xmldsig#"
           targetNamespace="https://dfm.dk"
           elementFormDefault="qualified">

